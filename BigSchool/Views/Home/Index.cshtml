@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Home Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<ul class="course">
    @foreach(var course in Model.UpcomingCourses)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Name
                            @if (Model.ShowAction)
                            {
                                <button class="btn btn-link btn-sm js-toggle-attendance">Follow</button>
                            }
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                        @if (Model.ShowAction)
                        {
                            <button data-course-id="@course.Id" class="btn btn-default btn-secondary btn-sm js-toggle-attendance">Going?</button>
                        }
                    </div>
                </li>
            }
</ul>

@section scripts 
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                const button = $(e.target);
                $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                    .done(function () {
                        if (button.hasClass("btn-secondary")) {
                            button
                                .removeClass("btn-secondary")
                                .addClass("btn-info")
                                .text("Going");
                        }

                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });
            $(".js-toggle-follow").click(function (e) {
                const button = $(e.target);
                $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following");
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });
        });
    </script>
}